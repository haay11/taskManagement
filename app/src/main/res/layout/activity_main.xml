<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <include layout="@layout/toolbar_layout"
        />


    <FrameLayout
        android:id="@+id/create_business_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_layout"


        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/create_business_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                />
            <TextView
                android:id="@+id/create_business_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/task_generation"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="9.4dp"
                />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/business_order_box_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_layout"
        android:layout_marginTop="4dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_box"
                />
            <TextView
                android:id="@+id/business_order_box_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/business_order_box"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="9.4dp"
                />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/processing_status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:background="@drawable/selector_layout"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_process"
                />
            <TextView
                android:id="@+id/processing_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/processing_status"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="9.4dp"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
